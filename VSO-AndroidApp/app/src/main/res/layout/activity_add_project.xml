<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhawesh96.vso_androidapp.AddProject">

    <ToggleButton
        android:id="@+id/toggleButton_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Weekly"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <EditText
        android:id="@+id/editText_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleButton_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="title" />

    <EditText
        android:id="@+id/editText_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_title"
        android:layout_alignStart="@+id/editText_title"
        android:layout_below="@+id/editText_title"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="desc"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Add"
        android:layout_below="@+id/editText_desc"
        android:layout_alignLeft="@+id/toggleButton_type"
        android:layout_alignStart="@+id/toggleButton_type" />

    <Button
        android:id="@+id/button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:text="View"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />
    <Button
        android:id="@+id/button_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick"
        android:layout_alignBaseline="@+id/button_view"
        android:layout_alignBottom="@+id/button_view"
        android:layout_toRightOf="@+id/button_add"
        android:layout_toEndOf="@+id/button_add" />


</RelativeLayout>
